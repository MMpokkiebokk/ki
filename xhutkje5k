local Library = {
    Ui_Bind = Enum.KeyCode.RightShift,
    CurrentTheme = "Default",
    Themes = Themes,
    MobileMode = _uis.TouchEnabled,
    Instances = {},
    Connections = {},
    Font = nil,
    Config = {},
    Notifications = {},
    Tooltips = {},
    Settings = {
        WatermarkEnabled = true,
        WatermarkUpdateRate = 0.1,
        NotificationsEnabled = true,
        TooltipsEnabled = true,
        AnimationsEnabled = true,
        AutoScale = true,
        SaveConfig = true,
        ConfigName = "FunnyKM_Config.json"
    }
}

-- Load/Save Config System
function Library:LoadConfig()
    if not self.Settings.SaveConfig then return end
    
    local success, data = pcall(function()
        return readfile(self.Settings.ConfigName)
    end)
    
    if success and data then
        local success2, config = pcall(function()
            return _http:JSONDecode(data)
        end)
        
        if success2 and config then
            self.Config = config
            
            -- Apply loaded settings
            if config.Theme and self.Themes[config.Theme] then
                self.CurrentTheme = config.Theme
                self.Colors = self.Themes[config.Theme]
            end
            
            if config.Settings then
                for k, v in pairs(config.Settings) do
                    if self.Settings[k] ~= nil then
                        self.Settings[k] = v
                    end
                end
            end
        end
    end
end

function Library:SaveConfig()
    if not self.Settings.SaveConfig then return end
    
    local config = {
        Theme = self.CurrentTheme,
        Settings = self.Settings
    }
    
    pcall(function()
        writefile(self.Settings.ConfigName, _http:JSONEncode(config))
    end)
end

-- Initialize
Library:LoadConfig()
Library.Colors = Library.Themes[Library.CurrentTheme]

--[ [Fonts] ]--
function Library:Register_Font(Name, Weight, Style, Asset)
    if not isfile(Asset.Id) then 
        pcall(function()
            writefile(Asset.Id, Asset.Font) 
        end)
    end
    if isfile(Name .. ".font") then 
        pcall(function()
            delfile(Name .. ".font") 
        end)
    end
    local Data = {
        name = Name,
        faces = {
            {
                name = "Regular",
                weight = Weight,
                style = Style,
                assetId = getcustomasset(Asset.Id),
            },
        },
    }
    pcall(function()
        writefile(Name .. ".font", _http:JSONEncode(Data))
    end)
    return getcustomasset(Name .. ".font");
end

--[ [functions] ]--
function Library:Create(Class, Properties, Secure)
    local _Instance
    if Secure then
        _Instance = cloneref(Instance.new(Class))
    else 
        _Instance = type(Class) == 'string' and Instance.new(Class) or Class 
    end
    for Property, Value in next, Properties do
        pcall(function()
            _Instance[Property] = Value
        end)
    end
    table.insert(Library.Instances, _Instance)
    return _Instance
end

function Library:validate(defaults, options)
    for i,v in pairs(defaults) do
        if options[i] == nil then
            options[i] = v
        end
    end
    return options
end

function Library:connection(signal, callback, tbl)
    local connection
    pcall(function()
        connection = signal:Connect(callback)
    end)
    
    if connection then
        table.insert(self.Connections, connection)
        if tbl then table.insert(tbl, connection) end
        return connection
    end
    return nil
end

function Library:unload()
    for _,v in next, self.Instances do 
        pcall(function() v:Destroy() end) 
    end
    for _,v in next, self.Connections do 
        pcall(function() v:Disconnect() end) 
    end
end

function Library:tween(object, goal, callback)
    if not self.Settings.AnimationsEnabled then
        for prop, value in pairs(goal) do
            pcall(function()
                object[prop] = value
            end)
        end
        if callback then callback() end
        return
    end
    
    local tween
    pcall(function()
        tween = _tweenservice:Create(object, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), goal)
        if callback then
            tween.Completed:Connect(callback)
        end
        tween:Play()
    end)
    return tween
end

function lerp(startValue, endValue, duration, callback)
    local startTime = tick()
    local completed = false
    task.spawn(function()
        while true do
            local currentTime = tick() - startTime
            if currentTime >= duration then
                callback(endValue)
                completed = true
                break
            end
            local progress = currentTime / duration
            local lerped = startValue + (endValue - startValue) * (1 - (1 - progress) * (1 - progress))
            callback(lerped)
            task.wait()
        end
    end)
    while not completed do
        task.wait()
    end
end

-- Notification System
function Library:Notify(options)
    if not self.Settings.NotificationsEnabled then return end
    
    options = self:validate({
        title = "Notification",
        text = "This is a notification",
        duration = 5,
        image = nil,
        callback = function() end
    }, options or {})
    
    local notification = {
        Title = options.title,
        Text = options.text,
        Duration = options.duration,
        Image = options.image,
        Callback = options.callback
    }
    
    table.insert(self.Notifications, notification)
    
    -- Create notification UI
    local NOTIFICATION_FRAME = self:Create("Frame", {
        Parent = SCREENGUI,
        Size = UDim2.new(0, 300, 0, 80),
        Position = UDim2.new(1, -320, 1, -100),
        BackgroundColor3 = self.Colors.Window,
        BorderSizePixel = 0,
        ZIndex = 100,
        Name = "Notification"
    })
    
    self:Create("UIStroke", {
        Parent = NOTIFICATION_FRAME,
        Color = self.Colors.BorderColor,
        Thickness = 1
    })
    
    self:Create("UICorner", {
        Parent = NOTIFICATION_FRAME,
        CornerRadius = UDim.new(0, 8)
    })
    
    local TITLE_LABEL = self:Create("TextLabel", {
        Parent = NOTIFICATION_FRAME,
        Size = UDim2.new(1, -20, 0, 20),
        Position = UDim2.new(0, 10, 0, 10),
        BackgroundTransparency = 1,
        Text = options.title,
        TextColor3 = self.Colors.Accent,
        TextSize = 14,
        FontFace = self.Font,
        TextXAlignment = Enum.TextXAlignment.Left,
        TextYAlignment = Enum.TextYAlignment.Top,
        ZIndex = 101
    })
    
    local TEXT_LABEL = self:Create("TextLabel", {
        Parent = NOTIFICATION_FRAME,
        Size = UDim2.new(1, -20, 0, 40),
        Position = UDim2.new(0, 10, 0, 35),
        BackgroundTransparency = 1,
        Text = options.text,
        TextColor3 = self.Colors.ElementActive,
        TextSize = 12,
        FontFace = self.Font,
        TextXAlignment = Enum.TextXAlignment.Left,
        TextYAlignment = Enum.TextYAlignment.Top,
        TextWrapped = true,
        ZIndex = 101
    })
    
    if options.image then
        self:Create("ImageLabel", {
            Parent = NOTIFICATION_FRAME,
            Size = UDim2.new(0, 30, 0, 30),
            Position = UDim2.new(1, -40, 0, 10),
            BackgroundTransparency = 1,
            Image = options.image,
            ZIndex = 101
        })
    end
    
    -- Animate in
    self:tween(NOTIFICATION_FRAME, {Position = UDim2.new(1, -320, 1, -100)})
    
    -- Auto remove after duration
    task.spawn(function()
        task.wait(options.duration)
        self:tween(NOTIFICATION_FRAME, {Position = UDim2.new(1, 20, 1, -100)}, function()
            NOTIFICATION_FRAME:Destroy()
        end)
    end)
    
    -- Click handler
    self:connection(NOTIFICATION_FRAME.MouseButton1Click, function()
        options.callback()
        self:tween(NOTIFICATION_FRAME, {Position = UDim2.new(1, 20, 1, -100)}, function()
            NOTIFICATION_FRAME:Destroy()
        end)
    end)
    
    return notification
end

-- Tooltip System
function Library:AddTooltip(element, text)
    if not self.Settings.TooltipsEnabled then return end
    
    local TOOLTIP = self:Create("TextLabel", {
        Parent = SCREENGUI,
        Size = UDim2.new(0, 150, 0, 30),
        Position = UDim2.new(0, 0, 0, 0),
        BackgroundColor3 = self.Colors.Window,
        BorderSizePixel = 0,
        Text = text,
        TextColor3 = self.Colors.ElementActive,
        TextSize = 12,
        FontFace = self.Font,
        TextXAlignment = Enum.TextXAlignment.Center,
        TextYAlignment = Enum.TextYAlignment.Center,
        TextWrapped = true,
        ZIndex = 200,
        Visible = false
    })
    
    self:Create("UIStroke", {
        Parent = TOOLTIP,
        Color = self.Colors.BorderColor,
        Thickness = 1
    })
    
    self:Create("UICorner", {
        Parent = TOOLTIP,
        CornerRadius = UDim.new(0, 4)
    })
    
    table.insert(self.Tooltips, TOOLTIP)
    
    local function updatePosition()
        local mousePos = _uis:GetMouseLocation()
        TOOLTIP.Position = UDim2.new(0, mousePos.X + 10, 0, mousePos.Y + 10)
    end
    
    self:connection(element.MouseEnter, function()
        TOOLTIP.Visible = true
        updatePosition()
    end)
    
    self:connection(element.MouseLeave, function()
        TOOLTIP.Visible = false
    end)
    
    self:connection(_runservice.RenderStepped, function()
        if TOOLTIP.Visible then
            updatePosition()
        end
    end)
    
    return TOOLTIP
end

-- Theme Switching
function Library:SetTheme(themeName)
    if self.Themes[themeName] then
        self.CurrentTheme = themeName
        self.Colors = self.Themes[themeName]
        self:SaveConfig()
        
        -- Update all UI elements with new colors
        for _, instance in pairs(self.Instances) do
            if instance:IsA("GuiObject") then
                -- Update background colors
                if instance.BackgroundColor3 == self.Themes.Default.Window then
                    self:tween(instance, {BackgroundColor3 = self.Colors.Window})
                elseif instance.BackgroundColor3 == self.Themes.Default.Section then
                    self:tween(instance, {BackgroundColor3 = self.Colors.Section})
                elseif instance.BackgroundColor3 == self.Themes.Default.Accent then
                    self:tween(instance, {BackgroundColor3 = self.Colors.Accent})
                end
                
                -- Update text colors
                if instance:IsA("TextLabel") or instance:IsA("TextBox") then
                    if instance.TextColor3 == self.Themes.Default.ElementActive then
                        self:tween(instance, {TextColor3 = self.Colors.ElementActive})
                    elseif instance.TextColor3 == self.Themes.Default.ElementInactive then
                        self:tween(instance, {TextColor3 = self.Colors.ElementInactive})
                    elseif instance.TextColor3 == self.Themes.Default.TabActive then
                        self:tween(instance, {TextColor3 = self.Colors.TabActive})
                    elseif instance.TextColor3 == self.Themes.Default.TabInactive then
                        self:tween(instance, {TextColor3 = self.Colors.TabInactive})
                    end
                end
                
                -- Update border colors
                if instance:FindFirstChild("UIStroke") then
                    if instance.UIStroke.Color == self.Themes.Default.BorderColor then
                        self:tween(instance.UIStroke, {Color = self.Colors.BorderColor})
                    end
                end
            end
        end
        
        self:Notify({
            title = "Theme Changed",
            text = "Theme has been changed to " .. themeName,
            duration = 3
        })
    end
end

-- Mobile Optimization
function Library:OptimizeForMobile()
    if not self.MobileMode then return end
    
    -- Adjust sizes for mobile
    for _, instance in pairs(self.Instances) do
        if instance:IsA("GuiObject") and instance.Parent == SCREENGUI then
            -- Make UI elements larger for touch
            if instance.Size.X.Offset > 0 and instance.Size.Y.Offset > 0 then
                instance.Size = UDim2.new(instance.Size.X.Scale, instance.Size.X.Offset * 1.2, 
                                         instance.Size.Y.Scale, instance.Size.Y.Offset * 1.2)
            end
        end
    end
    
    -- Enable touch scrolling
    for _, instance in pairs(self.Instances) do
        if instance:IsA("ScrollingFrame") then
            instance.ScrollBarThickness = 6
            instance.ScrollingDirection = Enum.ScrollingDirection.Y
            instance.ElasticBehavior = Enum.ElasticBehavior.Always
        end
    end
end

-- AutoScale System
function Library:AutoScale(element)
    if not self.Settings.AutoScale then return end
    
    local ASPECT_RATIO = element:FindFirstChild("UIAspectRatioConstraint")
    if not ASPECT_RATIO then
        ASPECT_RATIO = self:Create("UIAspectRatioConstraint", {
            Parent = element,
            AspectRatio = element.AbsoluteSize.X / element.AbsoluteSize.Y,
            DominantAxis = Enum.DominantAxis.Width
        })
    end
    
    return ASPECT_RATIO
end

